                <button type="button" class="btn btn-default waves-effect" id="add-new-account-btn">
                    <i class="material-icons">person_add</i>
                    <span>เพิ่มบัญชี</span>
                </button>
                <button type="button" class="btn btn-default waves-effect del" id="button" onclick="deletetable()">
                    <i class="material-icons">delete</i>
                    <span>ลบบัญชี</span>
                </button>
                <button type="button" class="btn btn-default waves-effect">
                    <i class="material-icons">vpn_key</i>
                    <span>ตั้งรหัสผ่านใหม่</span>
                </button>
                <button type="button" class="btn btn-default waves-effect" id="change-role-btn">
                    <i class="material-icons">person_outline</i>
