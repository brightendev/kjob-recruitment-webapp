    <section class="content" style="--sidebar-width: 250px; --sidenav-width: 0px; --quickbar-height: 60px">

        <div class="container-fluid">
            <div class="block-header"></div>

            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card  outline-kmutnb">
                        <div class="header">
                            <h2>
                                บัญชีผู้ใช้ทั้งหมด
                            </h2>
                        </div>
                        <div class="body">
                            <div class="col-12">
                                <div class="form-group">
                                    <input type="text" id="email-filter" placeholder=" อีเมล์" title="Type in a name">


                                    <select id="role-name">
                                        <option selected value='all'>ทั้งหมด</option>
                                        <option value='Candidate'>Candidate</option>
                                        <option value='Staff'>Staff</option>
                                        <option value='Admin'>Admin</option>

                                    </select>
                                </div>
                            </div>

                            <div class="table-responsive"></div>
                            <table class="table" id="mytable">
                                <thead>
                                    <tr>
                                        <th onclick="w3.sortHTML('#mytable', '.item', 'td:nth-child(1)')">อีเมล์ <i class="material-icons">sort</i></th>
                                        <th class="role" onclick="w3.sortHTML('#mytable', '.item', 'td:nth-child(2)')">Role <i class="material-icons">sort</i></th>
                                    </tr>
                                </thead>
                                <tbody id="tablelist">
                                    @{
                                        foreach (var account in ViewData["accountList"] as List<KJobRecruitmentWebApp.Data.Admin.Account>)
                                        {
                                            <tr class="item">
                                                <td>@account.email</td>
                                                <td>@account.role_name</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
        </div>
