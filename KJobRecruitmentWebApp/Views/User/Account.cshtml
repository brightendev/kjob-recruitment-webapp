    <section class="sidenav" style="width: 150px; --sidebar-width: 250px; --quickbar-height: 0px;">
        <div class="tool">
            <a href="#">บัญชีผู้ใช้</a>
            <a href="#history">ประวัติการใช้งาน</a>
            <a href="#notification">การแจ้งเตือน</a>
        </div>
    </section>

    <section class="content" style="--sidebar-width: 250px; --sidenav-width: 150px; --quickbar-height: 0px">

        <div class="container-fluid">

            <div class="block-header">บัญชีผู้ใช้</div>
            <div class="row clearfix" id="account">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card outline-kmutnb">
                        <div class="body">
                            <div class="list-group">

                                <button type="button" class="list-group-item waves-effect">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        รูปถาพบัญชี
                                    </div>
                                    <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" >
                                        <div class="image">
                                            <img src="images/user.png" alt="User" />
                                        </div>
                                    </div>
                                    <div class="icon col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                        <i class="material-icons">create</i>
                                    </div>
                                </button>

                                <button type="button" class="list-group-item waves-effect" id="account-email">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        อีเมล์
                                    </div>
                                    <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                        @ViewData["email"]
                                    </div>
                                    <div class="icon col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                        <i class="material-icons">create</i>
                                    </div>
                                </button>

                                <button type="button" class="list-group-item waves-effect" id="account-pass">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        รหัสผ่าน
                                    </div>
                                    <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                        ********
                                    </div>
                                    <div class="icon col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                        <i class="material-icons">create</i>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="block-header">ประวัติการใช้งาน</div>
            <div class="row clearfix" id="history">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card outline-kmutnb">
                        <div class="body">
                            <div class="list-group">
                                <button type="button" class="list-group-item waves-effect">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        สร้างบัญชีเมื่อ
                                    </div>
                                    <div class="detail col-lg-9 col-md-9 col-sm-9 col-xs-9">
                                        @ViewData["created_date"]
                                    </div>
                                </button>

                                <button type="button" class="list-group-item waves-effect">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        ลงชื่อเข้าใช้ล่าสุดเมื่อ
                                    </div>
                                    <div class="detail col-lg-9 col-md-9 col-sm-9 col-xs-9">
                                        @ViewData["last_login"]
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="block-header">การแจ้งเตือน</div>
            <div class="row clearfix" id="notification">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card outline-kmutnb">
                        <div class="body">
                            <div class="list-group">
                                <button type="button" class="list-group-item waves-effect" id="notification-all">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        การแจ้งเตือน
                                    </div>
                                    <div name="value" style="display: none">@ViewData["notif_all"]</div>
                                    <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" name="status-text">
                                        @ViewData["notif_all"]
                                    </div>
                                    <div class="icon col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                        <i class="material-icons">create</i>
                                    </div>
                                </button>

                                <button type="button" class="list-group-item waves-effect" id="notification-email">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        การแจ้งเตือนทางอีเมล์
                                    </div>
                                    <div name="value" style="display: none">@ViewData["notif_email"]</div>
                                    <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" name="status-text">
                                        @ViewData["notif_email"]
                                    </div>
                                    <div class="icon col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                        <i class="material-icons">create</i>
                                    </div>
                                </button>

                                <button type="button" class="list-group-item waves-effect" id="notification-news">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        การแจ้งเตือนข่าวสาร
                                    </div>
                                    <div name="value" style="display: none">@ViewData["notif_news"]</div>
                                    <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" name="status-text">
                                        @ViewData["notif_news"]
                                    </div>
                                    <div class="icon col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                        <i class="material-icons">create</i>
                                    </div>
                                </button>

                                <button type="button" class="list-group-item waves-effect" id="notification-interested">
                                    <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                        การแจ้งเตือนงานที่สนใจ
                                    </div>
                                    <div name="value" style="display: none">@ViewData["notif_interested"]</div>
                                    <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" name="status-text">
                                        @ViewData["notif_interested"]
                                    </div>
                                    <div class="icon col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                        <i class="material-icons">create</i>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>



