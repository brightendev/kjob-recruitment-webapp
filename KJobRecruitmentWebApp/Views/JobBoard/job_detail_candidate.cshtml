<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>KJob Template</title>

    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Sweetalert Css -->
    <link href="~/plugins/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/css/style.css" rel="stylesheet">

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/css/themes/theme-kmutnb.css" rel="stylesheet" />

</head>

<body class="theme-kmutnb">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <div class="search-bar">
        <div class="search-icon">
            <i class="material-icons">search</i>
        </div>
        <input type="text" placeholder="START TYPING...">
        <div class="close-search">
            <i class="material-icons">close</i>
        </div>
    </div>
    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">

                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>

                <a class="navbar-brand" href="widgets/../index.html"><b style="color: #F77100">K</b>Job</a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">


                <ul class="nav navbar-nav navbar-menu">
                    <a href="/">หน้าแรก</a>
                    <a class="active" href="/candidate/jobboard">งาน/ข่าวสาร</a>
                    <a href="#">เกี่ยวกับ</a>
                    <a href="#">เว็บไซต์ มจพ.</a>
                </ul>

                <ul class="nav navbar-nav navbar-right ">
                    <li><a href="javascript:void(0);" class="js-search" data-close="true"><i class="material-icons">search</i></a></li>
                    <!-- Notifications -->
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                            <i class="material-icons">notifications</i>
                            <!--          <span class="label-count">7</span>
                            -->
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">การแจ้งเตือน</li>
                            <li class="body">
                                <ul class="menu">

                                    <li>
                                        <a href="javascript:void(0);">
                                            <div class="icon-circle bg-purple">
                                                <i class="material-icons">settings</i>
                                            </div>
                                            <div class="menu-info">
                                                <h4>Settings updated</h4>
                                                <p>
                                                    <i class="material-icons">access_time</i> Yesterday
                                                </p>
                                            </div>
                                        </a>
                                    </li>

                                </ul>
                            </li>
                            <li class="footer">
                                <a href="javascript:void(0);">ดูการแจ้งเตือนทั้งหมด</a>
                            </li>
                        </ul>
                    </li>
                    <!-- #END# Notifications -->
                    <!-- Tasks -->
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                            <i class="material-icons">account_circle</i>
                            <!--      <span class="label-count">9</span>
                            -->
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">ผู้สมัคร</li>
                            <li class="body">
                                <ul class="menu tasks">

                                    <li>
                                        <a href="/candidate/user/account" class=" waves-effect waves-block">

                                            <div class="icon-circle bg-cyan">
                                                <i class="material-icons">account_circle</i>
                                            </div>
                                            <div class="menu-info">
                                                <h4>บัญชี</h4>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="login" class=" waves-effect waves-block">

                                            <div class="icon-circle bg-cyan">
                                                <i class="material-icons">account_circle</i>
                                            </div>
                                            <div class="menu-info">
                                                <h4>งานที่ลงสมัคร</h4>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/user/signout" class=" waves-effect waves-block">
                                            <div class="icon-circle bg-cyan">
                                                <i class="material-icons">person_add</i>
                                            </div>
                                            <div class="menu-info">
                                                <h4>ออกจากระบบ</h4>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <!-- #END# Tasks -->
                    <li class="pull-right"><a href="javascript:void(0);" class="js-right-sidebar" data-close="true"><i class="material-icons">more_vert</i></a></li>
                </ul>
            </div>
        </div>

    </nav>

    <!-- #Top Bar -->

    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar outline-kmutnb" style="width: 270px">
            <!-- User Info -->
            <div class="user-info" style="height: 140px">

                <div class="info-container" style="height: 50%">

                    <div class="email" style="font-size: 16px; font-weight: bold">หมวดหมู่งาน</div>
                    <hr>

                </div>
                <div class="field-kmutnb-small" style="height: 50%;">

                    <input type="text" class="form-control" placeholder="ค้นหา">

                </div>
            </div>
            <!-- #User Info -->
            <!-- Category Menu -->
            <div class="menu">
                <ul class="list">

                    <li>
                        <a href="../jobboard?category=all">
                            <i class="material-icons">card_travel</i>
                            <span>ทั้งหมด</span>
                        </a>
                    </li>

                    @{
                        var selectedJob = ViewData["SelectedJob"] as KJobRecruitmentWebApp.Data.Job.JobAllData;
                        var categoryList = ViewData["CategoryList"] as List<KJobRecruitmentWebApp.Data.Job.Category>;
                        var jobCategory = categoryList.Find(c =>
                        {
                            return c.id.Equals(selectedJob.category.ToString());
                        });
                        foreach (var category in categoryList)
                        {

                            string activeIfSelectedJobIsInThisCategory = "";
                            if (category.id.Equals(selectedJob.category))
                            {
                                activeIfSelectedJobIsInThisCategory = "active";
                            }
                            <li class="@activeIfSelectedJobIsInThisCategory">
                                <a href="../jobboard?category=@category.id">
                                    <i class="material-icons">card_travel</i>
                                    <span>@category.name</span>
                                </a>
                            </li>
                        }

                        string jobSalary = "";
                        if (selectedJob.min_salary == null && selectedJob.max_salary == null) { jobSalary = "ไม่ได้ระบุ"; }
                        else if (selectedJob.max_salary == null)
                        {
                            jobSalary = selectedJob.min_salary;
                        }
                        else
                        {
                            jobSalary = $"{selectedJob.min_salary} - {selectedJob.max_salary}";
                        }
                    }

                </ul>
            </div>
            <!-- #END Category Menu -->

        </aside>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <aside id="rightsidebar" class="right-sidebar" style="width: 150px">

            <div>
                <ul class="page-menu">
                    <a href="/">
                        <li><span>หน้าแรก</span></li>
                    </a>
                    <a href="/candidate/jobboard">
                        <li class="active"><span>งาน/ข่าวสาร</span></li>
                    </a>
                    <a href="#">
                        <li><span>เกี่ยวกับ</span></li>
                    </a>
                    <a href="#">
                        <li><span>เว็บไซจ์ มจพ.</span></li>
                    </a>
                </ul>
            </div>
        </aside>
        <!-- #END# Right Sidebar -->

    </section>

    <section class="quickbar" style="height: 60px; --sidebar-width: 250px;">
        <div class="container-fluid">
            <ol class="breadcrumb">
                <li><a href="../jobboard?category=@jobCategory.id"><i class="material-icons">card_travel</i> @jobCategory.name</a></li>
                <li class="active"><i class="material-icons">library_books</i> @selectedJob.title</li>
            </ol>
            <div class="button-group">
                <button type="button" class="btn btn-default waves-effect" id="apply-button" onclick="location.href='/candidate/jobboard/applyjob=@selectedJob.id'">
                    <i class="material-icons">file_download</i>
                    <span>สมัคร</span>
                </button>
                <button type="button" class="btn btn-default waves-effect">
                    <i class="material-icons">local_printshop</i>
                    <span>พิมพ์</span>
                </button>

            </div>
        </div>
    </section>

    <section class="sidenav" style="width: 150px; --sidebar-width: 270px;  --quickbar-height: 60px;">
        <div>
            <a href="#basic_information">ข้อมูลงานเบื้องต้น</a>
            @{
                var jobDetailData = ViewData["JobDetailData"] as KJobRecruitmentWebApp.Controllers.JobBoardController.JobDetail;
                foreach (var thisDetail in jobDetailData.detailList)
                {
                    <a href="#@thisDetail.title">@thisDetail.title</a>
                }
            }

        </div>
    </section>

    <section class="content" style="--sidebar-width: 270px; --sidenav-width: 150px; --quickbar-height: 60px">

        <div class="container-fluid">

            <div id="basic_information">
                <div class="block-header" style="font-size: 28px">@selectedJob.title</div>
                <div class="block-header">ข้อมูลงานเบื้องต้น</div>
                <div class="row clearfix" id="jobdetail">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card outline-kmutnb">
                            <div class="body">

                                <ul class="list-group">

                                    <li class="list-group-item" style="display: inline-block; width: 100%">
                                        <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3" style="margin-bottom: 0; margin-top: 0">
                                            ชื่องาน
                                        </div>
                                        <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" name="value" style="margin-bottom: 0; margin-top: 0">
                                            @selectedJob.title
                                        </div>
                                    </li>

                                    <li class="list-group-item" style="display: inline-block; width: 100%">
                                        <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3" style="margin-bottom: 0; margin-top: 0">
                                            เงินเดือน
                                        </div>
                                        <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" name="value" style="margin-bottom: 0; margin-top: 0">
                                            @jobSalary
                                        </div>
                                    </li>

                                    <li class="list-group-item" style="display: inline-block; width: 100%">
                                        <div class="title col-lg-3 col-md-3 col-sm-3 col-xs-3" style="margin-bottom: 0; margin-top: 0">
                                            หมวดหมู่งาน
                                        </div>
                                        <div class="detail col-lg-7 col-md-7 col-sm-7 col-xs-7" name="value" style="margin-bottom: 0; margin-top: 0">
                                            <a href="../jobboard?category=@jobCategory.id" style="color: #F77100">@jobCategory.name</a>
                                        </div>
                                    </li>

                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @{

                foreach (var thisDetail in jobDetailData.detailList)
                {


                    <div id="@thisDetail.title">
                        <div class="block-header" name="detail-title">@thisDetail.title</div>

                        <div class="row clearfix">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="card outline-kmutnb">
                                    <div class="body">

                                        <ul class="list-group">

                                            @foreach (string line in thisDetail.LineList)
                                            {
                                                <li class="list-group-item">@line</li>
                                            }

                                        </ul>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }



            }


        </div>
    </section>


    <!-- Jquery Core Js -->
    <script src="~/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Select Plugin Js -->
    <script src="~/plugins/bootstrap-select/js/bootstrap-select.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="~/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/plugins/node-waves/waves.js"></script>

    <!-- SweetAlert Plugin Js -->
    <script src="~/plugins/sweetalert2/dist/sweetalert2.all.min.js"></script>

    <!-- Custom Js -->
    <script src="~/js/admin.js"></script>

    <!-- Demo Js -->
    <script src="~/js/demo.js"></script>

</body>

</html>